{% extends 'TritonCrudBundle::base.html.twig' %}

{% block title %}
{{ parent() }} - order
{% endblock %}

{% block body %}

<header class="panel-heading">
    <h2> Orders</h2>
</header>
<div class="panel-body">

    <form class="form form-vertical">
        <fieldset>            <div class="control-group">
                <label class="col-sm-2 control-label">Id</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ order.id }}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Userid</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ order.userId }}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Orderdate</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{% if order.orderDate %}{{ order.orderDate|date('Y-m-d H:i:s') }}{% endif %}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Status</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ order.status }}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Productid</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ order.productId }}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Size</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ order.size }}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Img</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ order.img }}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Color</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ order.color }}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Quantity</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ order.quantity }}</span>
                </div>
            </div>            <div class="control-group">
                <label class="col-sm-2 control-label">Amount</label>
                <div class="col-sm-10">
                    <span class="input-xlarge uneditable-input">{{ order.amount }}</span>
                </div>
            </div>        </fieldset>
    </form>
        <hr>
        <div class="form-group">
    <a class="btn btn-default" href="{{ path('orders') }}">
        <i class="fa fa-list" aria-hidden="true"></i>
        Back to list
    </a>
            <a class="btn btn-success" href="{{ path('orders_edit', { 'id':  order.id }) }}">
            <i class="fa fa-pencil" aria-hidden="true"></i>
            Edit
        </a>
                <a class="btn btn-primary" href="{{ path('orders_new') }}">
            <i class="fa fa-plus" aria-hidden="true"></i>
            New
        </a>
                <form action="{{ path('orders_delete', { 'id': order.id }) }}" method="post" style="display: inline-block">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                <i class="fa fa-trash-o"></i> 
                Delete</button>
        </form>
    </div>

</div>
<hr>

{% endblock %}

